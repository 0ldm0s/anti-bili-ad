{
  "manifest_version": 3,
  "name": "B站推荐过滤",
  "version": "0.1.1",
  "description": "给B站不可屏蔽的推荐内容（直播、番剧等）添加过滤功能，支持按类型屏蔽",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.bilibili.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.bilibili.com/*"
      ],
      "js": [
        "content.js"
      ],
      "css": [
        "content.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "B站推荐过滤"
  }
}
